# CloudScope Environment Variables
# Copy this file to .env and update with your values

# General Configuration
LOG_LEVEL=INFO
STORAGE_TYPE=sqlite

# Cloud Provider Credentials
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Azure
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# Google Cloud
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=

# Integration Credentials
# Slack
SLACK_WEBHOOK_URL=

# Jira
JIRA_URL=https://your-domain.atlassian.net
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=CLOUD

# ServiceNow
SERVICENOW_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# PagerDuty
PAGERDUTY_INTEGRATION_KEY=

# Splunk
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=

# DataDog
DATADOG_API_KEY=
DATADOG_APP_KEY=

# GitHub
GITHUB_TOKEN=

# Database Configuration
# SQLite (default)
SQLITE_PATH=./data/cloudscope.db

# Memgraph (optional)
MEMGRAPH_HOST=memgraph
MEMGRAPH_PORT=7687
MEMGRAPH_USER=memgraph
MEMGRAPH_PASSWORD=memgraph

# Security
JWT_SECRET=change-this-to-a-secure-secret
ENCRYPTION_KEY=change-this-to-a-secure-key

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=cloudscope

# Grafana (for docker-compose)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ADVANCED_RELATIONSHIP_DETECTION=true
ENABLE_ML_ANOMALY_DETECTION=false
